---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/home/Hero.astro';
import SportShowcase from '../components/home/SportShowcase.astro';
import Categories from '../components/home/Categories.astro';
import QuickActions from '../components/home/QuickActions.astro';
import CTASection from '../components/home/CTASection.astro';

const sporten = await getCollection('sporten');
const sportCount = sporten.length;
---

<BaseLayout
  title="Home"
  description="H.G.V. Hengelo - De oudste en meest diverse sportvereniging van Hengelo sinds 1875. Ontdek onze sporten voor alle leeftijden. Word lid en start met bewegen!"
>
  <Header />

  <main>
    <Hero sportCount={sportCount} />
    <SportShowcase />
    <Categories />
    <QuickActions />
    <CTASection />
  </main>

  <Footer />
</BaseLayout>
