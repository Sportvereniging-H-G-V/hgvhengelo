---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import { regularRates, specialRates, additionalInfo } from '../../data/contributie';
import { Check, Info, Calendar, CreditCard, Percent, ArrowRight } from '@lucide/astro';
---

<BaseLayout
  title="Contributie"
  description="Contributie tarieven van HGV Hengelo voor seizoen 2025-2026. Bekijk de tarieven voor reguliere lessen en speciale sporten."
>
  <Header />

  <main class="overflow-x-hidden">
    <!-- Hero section -->
    <section class="relative py-20 bg-gradient-to-br from-primary via-primary-dark to-dark overflow-hidden">
      <div class="absolute inset-0 pattern-bg opacity-10"></div>

      <div class="container-custom relative">
        <div class="max-w-3xl">
          <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm text-accent text-sm font-medium mb-6">
            <Calendar class="w-4 h-4" />
            {additionalInfo.period}
          </span>
          <h1 class="text-white mb-6">
            Contributie <span class="text-accent">Tarieven</span>
          </h1>
          <p class="text-white/80 text-xl leading-relaxed">
            Bij HGV houden we de kosten laag dankzij onze vrijwilligers, subsidies en samenwerkingen.
            De contributie wordt maandelijks automatisch geïncasseerd en inclusief KNGU-lidmaatschap.
          </p>
        </div>
      </div>
    </section>

    <!-- Content section -->
    <section class="section-padding bg-cream">
      <div class="container-custom">
        <div class="grid lg:grid-cols-3 gap-12">
          <!-- Main content -->
          <div class="lg:col-span-2 space-y-12">
            <!-- Regular rates -->
            <div>
              <h2 class="text-2xl font-display font-bold text-dark mb-6">
                Reguliere Lessen
              </h2>
              <div class="bg-white rounded-2xl overflow-hidden shadow-lg">
                <div class="overflow-x-auto">
                <table class="w-full min-w-[320px]">
                  <thead>
                    <tr class="bg-primary/5">
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-left font-display font-bold text-dark">Lesduur</th>
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-center font-display font-bold text-dark">Junior (t/m 15)</th>
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-center font-display font-bold text-dark">Senior (16+)</th>
                    </tr>
                  </thead>
                  <tbody>
                    {regularRates.map((rate, index) => (
                      <tr class={index % 2 === 1 ? 'bg-cream/50' : ''}>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-dark/80">{rate.duration}</td>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-center font-semibold text-dark">{rate.junior}</td>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-center font-semibold text-dark">{rate.senior}</td>
                      </tr>
                    ))}
                  </tbody>
                </table>
                </div>
              </div>
              <p class="mt-4 text-sm text-dark/60 flex items-start gap-2">
                <Info class="w-4 h-4 mt-0.5 flex-shrink-0" />
                Tarieven zijn per maand en inclusief KNGU-lidmaatschap (juniors €2,50/maand, senioren €3,10/maand)
              </p>
            </div>

            <!-- Special rates -->
            <div>
              <h2 class="text-2xl font-display font-bold text-dark mb-6">
                Speciale Sporten
              </h2>
              <div class="bg-white rounded-2xl overflow-hidden shadow-lg">
                <div class="overflow-x-auto">
                <table class="w-full min-w-[400px]">
                  <thead>
                    <tr class="bg-primary/5">
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-left font-display font-bold text-dark">Sport</th>
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-center font-display font-bold text-dark">Lesduur</th>
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-center font-display font-bold text-dark">Junior</th>
                      <th class="px-3 py-3 sm:px-6 sm:py-4 text-center font-display font-bold text-dark">Senior</th>
                    </tr>
                  </thead>
                  <tbody>
                    {specialRates.map((rate, index) => (
                      <tr class={index % 2 === 1 ? 'bg-cream/50' : ''}>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-dark/80">{rate.sport}</td>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-center text-dark/70">{rate.duration}</td>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-center font-semibold text-dark">
                          {rate.junior || '—'}
                        </td>
                        <td class="px-3 py-3 sm:px-6 sm:py-4 text-center font-semibold text-dark">
                          {rate.senior || '—'}
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
                </div>
              </div>
            </div>

            <!-- Additional info -->
            <div>
              <h2 class="text-2xl font-display font-bold text-dark mb-6">
                Overige Kosten & Regelingen
              </h2>
              <div class="grid sm:grid-cols-2 gap-6">
                <div class="bg-white rounded-2xl p-6 shadow-lg">
                  <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-xl bg-energy/20 flex items-center justify-center">
                      <CreditCard class="w-5 h-5 text-energy" />
                    </div>
                    <h3 class="font-display font-bold text-dark">Inschrijfgeld</h3>
                  </div>
                  <p class="text-dark/70 mb-2">Eenmalig bij aanmelding</p>
                  <div class="flex justify-between">
                    <span class="text-dark/60">Junior:</span>
                    <span class="font-semibold text-dark">{additionalInfo.registrationFee.junior}</span>
                  </div>
                  <div class="flex justify-between">
                    <span class="text-dark/60">Senior:</span>
                    <span class="font-semibold text-dark">{additionalInfo.registrationFee.senior}</span>
                  </div>
                </div>

                <div class="bg-white rounded-2xl p-6 shadow-lg">
                  <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-xl bg-accent/20 flex items-center justify-center">
                      <Percent class="w-5 h-5 text-accent" />
                    </div>
                    <h3 class="font-display font-bold text-dark">Multi-sport korting</h3>
                  </div>
                  <p class="text-dark/70 mb-2">Bij meerdere sporten</p>
                  <p class="text-2xl font-display font-bold text-accent">{additionalInfo.multiSportDiscount} korting</p>
                  <p class="text-sm text-dark/60">op de 2e en volgende sporten</p>
                </div>
              </div>
            </div>

            <!-- Inactief lidmaatschap -->
            <div>
              <h2 class="text-2xl font-display font-bold text-dark mb-6">
                Inactief Lidmaatschap
              </h2>
              <div class="bg-white rounded-2xl p-6 shadow-lg">
                <p class="text-dark/70 mb-4">
                  Wil je verbonden blijven met HGV zonder actief deel te nemen aan de lessen?
                  Met een inactief lidmaatschap blijf je op de hoogte en kun je deelnemen aan verenigingsactiviteiten.
                </p>
                <div class="flex items-center justify-between p-4 bg-primary/5 rounded-xl">
                  <div>
                    <p class="font-semibold text-dark">Inactief lidmaatschap</p>
                    <p class="text-sm text-dark/60">Nieuwsbrief, ALV en sociale evenementen</p>
                  </div>
                  <p class="text-2xl font-display font-bold text-accent">{additionalInfo.inactiveMembership}</p>
                </div>
              </div>
            </div>

            <!-- Belangrijke voorwaarden -->
            <div>
              <h2 class="text-2xl font-display font-bold text-dark mb-6">
                Belangrijke Voorwaarden
              </h2>
              <div class="space-y-4">
                <div class="bg-white rounded-2xl p-6 shadow-lg">
                  <h3 class="font-display font-bold text-dark mb-3">
                    Restitutiebeleid
                  </h3>
                  <p class="text-dark/70">
                    Gemiste lessen geven geen recht op restitutie. We adviseren daarom om te kiezen
                    voor het aantal lessen dat realistisch is om wekelijks bij te wonen.
                  </p>
                </div>

                <div class="bg-white rounded-2xl p-6 shadow-lg">
                  <h3 class="font-display font-bold text-dark mb-3">
                    Wijzigingen
                  </h3>
                  <p class="text-dark/70">
                    Wijzigingen in je lidmaatschap (bijvoorbeeld toevoegen of verwijderen van een les)
                    kunnen via het online wijzigingsformulier worden doorgegeven.
                  </p>
                </div>
              </div>
            </div>

            <!-- Financiële ondersteuning -->
            <div class="bg-gradient-to-br from-energy/10 to-accent/10 rounded-2xl p-8 border border-energy/20">
              <h2 class="text-2xl font-display font-bold text-dark mb-4">
                Hulp bij kosten?
              </h2>
              <p class="text-dark/70 mb-4">
                Heeft jouw gezin financiële ondersteuning nodig? Het Jeugdsport & Cultuurfonds
                Hengelo-Borne kan helpen met de contributiekosten, zodat ieder kind kan sporten.
              </p>
              <a
                href="https://jeugdsportencultuurfondstwente.nl/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-accent hover:text-energy transition-colors font-semibold"
              >
                Meer informatie
                <ArrowRight class="w-5 h-5" />
              </a>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <div class="sticky top-28 space-y-6">
              <!-- Proeflessen highlight -->
              <div class="bg-gradient-to-br from-primary to-accent rounded-2xl p-6 text-white shadow-lg">
                <h3 class="font-display font-bold text-xl mb-3">
                  Gratis Proeflessen
                </h3>
                <p class="text-white/90 mb-4">
                  Probeer het uit! Je mag twee keer gratis meedoen voordat je je aanmeldt.
                  Geen afspraak nodig - kom gewoon langs!
                </p>
                <div class="flex items-center gap-2 text-white/80 text-sm">
                  <Check class="w-5 h-5" />
                  <span>2x gratis deelnemen</span>
                </div>
              </div>

              <!-- Important info -->
              <div class="bg-white rounded-2xl p-6 shadow-lg">
                <h3 class="font-display font-bold text-dark mb-4">
                  Wat is inbegrepen
                </h3>
                <ul class="space-y-3">
                  <li class="flex items-start gap-3 text-dark/70">
                    <Check class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                    <span>KNGU-lidmaatschap (€2,50-€3,10/mnd)</span>
                  </li>
                  <li class="flex items-start gap-3 text-dark/70">
                    <Check class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                    <span>Gebruik van alle faciliteiten</span>
                  </li>
                  <li class="flex items-start gap-3 text-dark/70">
                    <Check class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                    <span>Nieuwsbrief en uitnodigingen</span>
                  </li>
                  <li class="flex items-start gap-3 text-dark/70">
                    <Check class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                    <span>Betaling via automatische incasso</span>
                  </li>
                </ul>
              </div>

              <!-- Cancellation -->
              <div class="bg-white rounded-2xl p-6 shadow-lg">
                <h3 class="font-display font-bold text-dark mb-4">
                  Opzegtermijnen
                </h3>
                <p class="text-dark/70 mb-4">
                  Opzeggen kan per kwartaal:
                </p>
                <ul class="space-y-2">
                  {additionalInfo.cancellationDeadlines.map((date) => (
                    <li class="flex items-center gap-2 text-dark/80">
                      <span class="w-2 h-2 rounded-full bg-accent"></span>
                      {date}
                    </li>
                  ))}
                </ul>
              </div>

              <!-- CTA -->
              <div class="bg-gradient-to-br from-primary to-primary-dark rounded-2xl p-6 text-white">
                <h3 class="font-display font-bold text-xl mb-4">
                  Klaar om te starten?
                </h3>
                <p class="text-white/80 mb-6">
                  Meld je aan en ontvang direct twee gratis proeflessen!
                </p>
                <a href="/info/lidmaatschap" class="btn bg-white text-primary hover:bg-cream w-full justify-center">
                  Word Lid
                  <ArrowRight class="w-5 h-5" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
