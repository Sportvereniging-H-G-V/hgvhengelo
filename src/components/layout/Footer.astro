---
import { navigation, socialLinks } from '../../data/navigation';
import { Phone, Mail, Facebook, Instagram, Video, MessageCircle } from '@lucide/astro';

const iconMap: Record<string, any> = {
  facebook: Facebook,
  instagram: Instagram,
  music: Video, // TikTok - Lucide doesn't have a specific TikTok icon
  'message-circle': MessageCircle, // WhatsApp
};

const currentYear = new Date().getFullYear();
---

<footer class="bg-dark text-cream relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-accent via-energy to-accent"></div>
  <div class="absolute inset-0 pattern-bg opacity-5"></div>

  <div class="container-custom relative">
    <!-- Main footer content -->
    <div class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- About -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-6">
          <img 
            src="/logo.png" 
            alt="HGV Hengelo Logo" 
            class="h-12 w-auto"
          />
          <div>
            <span class="font-display font-bold text-xl text-accent">HGV Hengelo</span>
            <span class="text-cream/60 text-sm block">Sinds 1875</span>
          </div>
        </div>
        <p class="text-cream/70 leading-relaxed mb-6">
          De oudste en meest diverse sportvereniging van Hengelo.
          Waar iedereen op eigen niveau kan sporten en bewegen.
        </p>

        <!-- Social links -->
        <div class="flex gap-3">
          {socialLinks.map((link) => {
            // Use custom WhatsApp icon
            if (link.icon === 'message-circle') {
              return (
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-lg bg-dark-light hover:bg-accent hover:text-dark flex items-center justify-center transition-all duration-300 hover:-translate-y-1 text-cream hover:text-dark"
                  aria-label={link.label}
                >
                  <svg width="20" height="20" viewBox="0 0 360 362" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M307.546 52.5655C273.709 18.685 228.706 0.0171895 180.756 0C81.951 0 1.53846 80.404 1.50408 179.235C1.48689 210.829 9.74646 241.667 25.4319 268.844L0 361.736L95.0236 336.811C121.203 351.096 150.683 358.616 180.679 358.625H180.756C279.544 358.625 359.966 278.212 360 179.381C360.017 131.483 341.392 86.4547 307.546 52.5741V52.5655ZM180.756 328.354H180.696C153.966 328.346 127.744 321.16 104.865 307.589L99.4242 304.358L43.034 319.149L58.0834 264.168L54.5423 258.53C39.6304 234.809 31.749 207.391 31.7662 179.244C31.8006 97.1036 98.6334 30.2707 180.817 30.2707C220.61 30.2879 258.015 45.8015 286.145 73.9665C314.276 102.123 329.755 139.562 329.738 179.364C329.703 261.513 262.871 328.346 180.756 328.346V328.354ZM262.475 216.777C257.997 214.534 235.978 203.704 231.869 202.209C227.761 200.713 224.779 199.966 221.796 204.452C218.814 208.939 210.228 219.029 207.615 222.011C205.002 225.002 202.389 225.372 197.911 223.128C193.434 220.885 179.003 216.158 161.891 200.902C148.578 189.024 139.587 174.362 136.975 169.875C134.362 165.389 136.7 162.965 138.934 160.739C140.945 158.728 143.412 155.505 145.655 152.892C147.899 150.279 148.638 148.406 150.133 145.423C151.629 142.432 150.881 139.82 149.764 137.576C148.646 135.333 139.691 113.287 135.952 104.323C132.316 95.5909 128.621 96.777 125.879 96.6309C123.266 96.5019 120.284 96.4762 117.293 96.4762C114.302 96.4762 109.454 97.5935 105.346 102.08C101.238 106.566 89.6691 117.404 89.6691 139.441C89.6691 161.478 105.716 182.785 107.959 185.776C110.202 188.767 139.544 234.001 184.469 253.408C195.153 258.023 203.498 260.782 210.004 262.845C220.731 266.257 230.494 265.776 238.212 264.624C246.816 263.335 264.71 253.786 268.44 243.326C272.17 232.866 272.17 223.893 271.053 222.028C269.936 220.163 266.945 219.037 262.467 216.794L262.475 216.777Z" fill="currentColor"/>
                  </svg>
                </a>
              );
            }
            // Use custom TikTok icon
            if (link.icon === 'music') {
              return (
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-10 h-10 rounded-lg bg-dark-light hover:bg-accent hover:text-dark flex items-center justify-center transition-all duration-300 hover:-translate-y-1 text-cream hover:text-dark"
                  aria-label={link.label}
                >
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5">
                    <path d="M16.8217 5.1344C16.0886 4.29394 15.6479 3.19805 15.6479 2H14.7293M16.8217 5.1344C17.4898 5.90063 18.3944 6.45788 19.4245 6.67608C19.7446 6.74574 20.0786 6.78293 20.4266 6.78293V10.2191C18.645 10.2191 16.9932 9.64801 15.6477 8.68211V15.6707C15.6477 19.1627 12.8082 22 9.32386 22C7.50043 22 5.85334 21.2198 4.69806 19.98C3.64486 18.847 2.99994 17.3331 2.99994 15.6707C2.99994 12.2298 5.75592 9.42509 9.17073 9.35079M16.8217 5.1344C16.8039 5.12276 16.7861 5.11101 16.7684 5.09914M6.9855 17.3517C6.64217 16.8781 6.43802 16.2977 6.43802 15.6661C6.43802 14.0734 7.73249 12.7778 9.32394 12.7778C9.62087 12.7778 9.9085 12.8288 10.1776 12.9124V9.40192C9.89921 9.36473 9.61622 9.34149 9.32394 9.34149C9.27287 9.34149 8.86177 9.36884 8.81073 9.36884M14.7244 2H12.2097L12.2051 15.7775C12.1494 17.3192 10.8781 18.5591 9.32386 18.5591C8.35878 18.5591 7.50971 18.0808 6.98079 17.3564" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
                  </svg>
                </a>
              );
            }
            // Use Lucide icons for Facebook and Instagram
            const Icon = iconMap[link.icon];
            return (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-lg bg-dark-light hover:bg-accent hover:text-dark flex items-center justify-center transition-all duration-300 hover:-translate-y-1"
                aria-label={link.label}
              >
                <Icon class="w-5 h-5" />
              </a>
            );
          })}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-display font-bold text-lg text-accent mb-6">Navigatie</h4>
        <ul class="space-y-3">
          {navigation.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-cream/70 hover:text-accent transition-colors inline-flex items-center gap-2 group"
              >
                <span class="w-0 group-hover:w-2 h-0.5 bg-accent transition-all duration-300"></span>
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Info Links -->
      <div>
        <h4 class="font-display font-bold text-lg text-accent mb-6">Informatie</h4>
        <ul class="space-y-3">
          <li>
            <a href="/info/lidmaatschap" class="text-cream/70 hover:text-accent transition-colors">
              Lid Worden
            </a>
          </li>
          <li>
            <a href="/info/contributie" class="text-cream/70 hover:text-accent transition-colors">
              Contributie
            </a>
          </li>
          <li>
            <a href="/ons-aanbod/lesrooster" class="text-cream/70 hover:text-accent transition-colors">
              Lesrooster
            </a>
          </li>
          <li>
            <a href="/info/faq" class="text-cream/70 hover:text-accent transition-colors">
              Veelgestelde Vragen
            </a>
          </li>
          <li>
            <a href="/info/vakantierooster" class="text-cream/70 hover:text-accent transition-colors">
              Vakantierooster
            </a>
          </li>
          <li>
            <a href="/privacy-policy" class="text-cream/70 hover:text-accent transition-colors">
              Privacy Policy
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-display font-bold text-lg text-accent mb-6">Contact</h4>
        <ul class="space-y-4">
          <li>
            <a
              href="tel:+31643118346"
              class="flex items-center gap-3 text-cream/70 hover:text-accent transition-colors"
            >
              <Phone class="w-5 h-5 text-accent flex-shrink-0" />
              06 - 43 11 83 46
            </a>
          </li>
          <li>
            <a
              href="mailto:secretariaat@hgvhengelo.nl"
              class="flex items-center gap-3 text-cream/70 hover:text-accent transition-colors"
            >
              <Mail class="w-5 h-5 text-accent flex-shrink-0" />
              secretariaat@hgvhengelo.nl
            </a>
          </li>
          <li class="pt-2">
            <a
              href="/info/veilige-sportomgeving"
              class="text-cream/70 hover:text-accent transition-colors text-sm"
            >
              Veilige Sportomgeving & Gedragscode
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="py-6 border-t border-dark-light flex justify-center items-center">
      <p class="text-cream/50 text-sm">
        &copy; {currentYear} Sportvereniging H.G.V. Hengelo. Alle rechten voorbehouden.
      </p>
    </div>
  </div>
</footer>
