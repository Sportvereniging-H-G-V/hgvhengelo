---
import { ArrowRight } from '@lucide/astro';

interface FeaturedSport {
  title: string;
  category: string;
  image: string;
  href: string;
}

const featuredSports: FeaturedSport[] = [
  {
    title: 'Turnen',
    category: 'gymnastisch',
    image: '/images/sporten/turnen.jpg',
    href: '/sporten/turnen',
  },
  {
    title: 'Paaldansen',
    category: 'dans',
    image: '/images/sporten/paaldansen.jpg',
    href: '/sporten/paaldansen',
  },
  {
    title: 'Dodgeball',
    category: 'balsport',
    image: '/images/sporten/dodgeball.jpg',
    href: '/sporten/dodgeball',
  },
  {
    title: 'Freerunning',
    category: 'gymnastisch',
    image: '/images/sporten/freerunning.jpg',
    href: '/sporten/freerunning',
  },
  {
    title: 'RhÃ¶nradturnen',
    category: 'gymnastisch',
    image: '/images/sporten/rhonradturnen.jpg',
    href: '/sporten/rhonradturnen',
  },
  {
    title: 'Luchtacrobatiek',
    category: 'gymnastisch',
    image: '/images/sporten/luchtacrobatiek.jpg',
    href: '/sporten/luchtacrobatiek',
  },
];

const categoryColors: Record<string, string> = {
  'gymnastisch': 'badge-gymnastisch',
  'dans': 'badge-dans',
  'balsport': 'badge-balsport',
  'breed-sporten': 'badge-breed',
};
---

<section class="section-padding bg-cream relative overflow-hidden">
  <!-- Warm background decoration -->
  <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-sunshine/10 via-energy/5 to-transparent"></div>
  <div class="absolute bottom-0 left-0 w-1/3 h-1/2 bg-gradient-to-tr from-coral/10 to-transparent rounded-full blur-3xl"></div>

  <div class="container-custom relative">
    <!-- Section header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
      <div class="max-w-2xl">
        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-nature/20 text-nature font-bold text-sm mb-4">
          ðŸŒŸ Populaire sporten
        </span>
        <h2 class="text-dark mb-4">
          <span class="gradient-text">al onze sporten</span> om te proberen!
        </h2>
        <p class="text-dark/70 text-lg">
          Van turnen tot paaldansen, van freerunning tot rhÃ¶nradturnen.
          Hier vind je gegarandeerd iets leuks!
        </p>
      </div>

      <a href="/sporten" class="btn btn-primary shrink-0">
        Bekijk alles
        <ArrowRight class="w-5 h-5" />
      </a>
    </div>

    <!-- Featured sports grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredSports.map((sport, index) => (
        <a
          href={sport.href}
          class="group relative rounded-2xl overflow-hidden aspect-[4/3] card-hover animate-on-scroll"
          style={`animation-delay: ${index * 0.1}s;`}
        >
          <!-- Background image -->
          {sport.image ? (
            <img
              src={sport.image}
              alt={sport.title}
              class="absolute inset-0 w-full h-full object-cover"
              loading="lazy"
            />
          ) : (
            <div class="absolute inset-0 bg-gradient-to-br from-primary to-dark">
              <!-- Pattern overlay -->
              <div class="absolute inset-0 opacity-20">
                <div class="absolute inset-0" style="background: repeating-linear-gradient(45deg, transparent, transparent 20px, rgba(255,255,255,0.05) 20px, rgba(255,255,255,0.05) 22px);"></div>
              </div>
            </div>
          )}

          <!-- Overlay gradient -->
          <div class="absolute inset-0 bg-gradient-to-t from-dark/80 via-dark/30 to-transparent z-10"></div>

          <!-- Decorative accent -->
          <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-accent/30 to-transparent rounded-bl-full transform translate-x-16 -translate-y-16 group-hover:translate-x-8 group-hover:-translate-y-8 transition-transform duration-500"></div>

          <!-- Content -->
          <div class="absolute inset-0 p-6 flex flex-col justify-between z-20">
            <!-- Category badge -->
            <div class="relative z-30">
              <span class={`inline-flex px-3 py-1.5 rounded-full text-xs font-semibold backdrop-blur-sm ${categoryColors[sport.category]} shadow-lg`}>
                {sport.category}
              </span>
            </div>

            <!-- Title and arrow -->
            <div class="flex items-end justify-between">
              <h3 class="text-white text-2xl font-display font-bold group-hover:text-accent transition-colors">
                {sport.title}
              </h3>
              <div class="w-10 h-10 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center transform group-hover:bg-accent group-hover:scale-110 transition-all">
                <ArrowRight class="w-5 h-5 text-white group-hover:text-dark transition-colors" />
              </div>
            </div>
          </div>

          <!-- Hover effect -->
          <div class="absolute inset-0 border-2 border-transparent group-hover:border-accent/50 rounded-2xl transition-colors"></div>
        </a>
      ))}
    </div>

    <!-- Bottom CTA -->
    <div class="mt-12 text-center p-8 rounded-3xl bg-gradient-to-r from-sunshine/20 via-energy/10 to-coral/20">
      <p class="text-dark/80 mb-4 text-lg font-medium">
        Wil je een sport uitproberen? De eerste twee lessen zijn gratis!
      </p>
      <a href="/info/lidmaatschap" class="btn btn-sunshine">
        Gratis proefles aanvragen
        <ArrowRight class="w-5 h-5" />
      </a>
    </div>
  </div>
</section>
