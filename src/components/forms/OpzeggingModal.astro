---
import { X } from '@lucide/astro';
---

<div id="opzegging-modal" class="fixed inset-0 z-50 hidden items-center justify-center p-4">
  <!-- Backdrop -->
  <div 
    id="opzegging-modal-backdrop"
    class="absolute inset-0 bg-black/60 backdrop-blur-sm transition-opacity"
  ></div>

  <!-- Modal -->
  <div class="relative w-full max-w-4xl max-h-[95vh] bg-white rounded-2xl shadow-2xl overflow-hidden flex flex-col animate-scale-in">
    <!-- Header -->
    <div class="flex items-center justify-between p-4 bg-accent/10 border-b border-accent/20">
      <span class="text-base font-display font-semibold text-dark">
        Opzegging doorgeven
      </span>
      <button
        id="opzegging-modal-close"
        class="p-2 rounded-lg hover:bg-accent/20 transition-colors"
        aria-label="Sluiten"
      >
        <X class="w-6 h-6 text-dark" />
      </button>
    </div>

    <!-- Content -->
    <div class="flex-1 overflow-y-auto p-6">
      <!-- Opzegtermijn info -->
      <div class="mb-6 p-4 bg-energy/10 border border-energy/20 rounded-lg">
        <p class="text-sm text-dark">
          <strong>Opzegtermijn:</strong> Stuur het opzeggingsformulier v贸贸r afloop van een kwartaal (dus v贸贸r 31 maart, 30 juni, 30 september of 31 december)
        </p>
      </div>

      <form id="opzegging-form" class="space-y-6">
        <!-- Lid-gegevens sectie -->
        <div class="space-y-4">
          <h3 class="text-lg font-display font-bold text-dark border-b border-accent/20 pb-2">
            Lid-gegevens
          </h3>

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="voornaam" class="block text-sm font-medium text-dark mb-1">
                Voornaam <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="voornaam"
                name="voornaam"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
              />
            </div>

            <div>
              <label for="achternaam" class="block text-sm font-medium text-dark mb-1">
                Achternaam <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="achternaam"
                name="achternaam"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
              />
            </div>
          </div>

          <div>
            <label for="roepnaam" class="block text-sm font-medium text-dark mb-1">
              Roepnaam
            </label>
            <input
              type="text"
              id="roepnaam"
              name="roepnaam"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="straat" class="block text-sm font-medium text-dark mb-1">
                Straat + huisnummer <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="straat"
                name="straat"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
              />
            </div>

            <div class="grid grid-cols-2 gap-2">
              <div>
                <label for="postcode" class="block text-sm font-medium text-dark mb-1">
                  Postcode <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="postcode"
                  name="postcode"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
                />
              </div>

              <div>
                <label for="plaats" class="block text-sm font-medium text-dark mb-1">
                  Plaats <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="plaats"
                  name="plaats"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
                />
              </div>
            </div>
          </div>

          <div>
            <label for="telefoon" class="block text-sm font-medium text-dark mb-1">
              Telefoon <span class="text-red-500">*</span>
            </label>
            <input
              type="tel"
              id="telefoon"
              name="telefoon"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-dark mb-1">
              E-mailadres <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="email_confirm" class="block text-sm font-medium text-dark mb-1">
              E-mailadres bevestigen <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="email_confirm"
              name="email_confirm"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="geboortedatum" class="block text-sm font-medium text-dark mb-1">
              Geboortedatum <span class="text-red-500">*</span>
            </label>
            <input
              type="date"
              id="geboortedatum"
              name="geboortedatum"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-dark mb-2">
              Geslacht <span class="text-red-500">*</span>
            </label>
            <div class="space-y-2">
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="radio"
                  name="geslacht"
                  value="Man"
                  required
                  class="w-4 h-4 text-accent border-gray-300 focus:ring-accent"
                />
                <span class="text-dark">Man</span>
              </label>
              <label class="flex items-center gap-2 cursor-pointer">
                <input
                  type="radio"
                  name="geslacht"
                  value="Vrouw"
                  required
                  class="w-4 h-4 text-accent border-gray-300 focus:ring-accent"
                />
                <span class="text-dark">Vrouw</span>
              </label>
            </div>
          </div>

          <div>
            <label for="lesinfo" class="block text-sm font-medium text-dark mb-1">
              Leslocatie, lesdag en lestijd <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="lesinfo"
              name="lesinfo"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="opmerkingen" class="block text-sm font-medium text-dark mb-1">
              Opmerkingen (optioneel)
            </label>
            <textarea
              id="opmerkingen"
              name="opmerkingen"
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            ></textarea>
          </div>
        </div>

        <!-- Betaalrelatie sectie -->
        <div class="space-y-4">
          <h3 class="text-lg font-display font-bold text-dark border-b border-accent/20 pb-2">
            Betaalrelatie
          </h3>

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="betaalrelatie_voornaam" class="block text-sm font-medium text-dark mb-1">
                Voornaam <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="betaalrelatie_voornaam"
                name="betaalrelatie_voornaam"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
              />
            </div>

            <div>
              <label for="betaalrelatie_achternaam" class="block text-sm font-medium text-dark mb-1">
                Achternaam <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="betaalrelatie_achternaam"
                name="betaalrelatie_achternaam"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
              />
            </div>
          </div>

          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="betaalrelatie_straat" class="block text-sm font-medium text-dark mb-1">
                Straat + huisnummer <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="betaalrelatie_straat"
                name="betaalrelatie_straat"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
              />
            </div>

            <div class="grid grid-cols-2 gap-2">
              <div>
                <label for="betaalrelatie_postcode" class="block text-sm font-medium text-dark mb-1">
                  Postcode <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="betaalrelatie_postcode"
                  name="betaalrelatie_postcode"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
                />
              </div>

              <div>
                <label for="betaalrelatie_plaats" class="block text-sm font-medium text-dark mb-1">
                  Plaats <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="betaalrelatie_plaats"
                  name="betaalrelatie_plaats"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
                />
              </div>
            </div>
          </div>

          <div>
            <label for="betaalrelatie_telefoon" class="block text-sm font-medium text-dark mb-1">
              Telefoon <span class="text-red-500">*</span>
            </label>
            <input
              type="tel"
              id="betaalrelatie_telefoon"
              name="betaalrelatie_telefoon"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="betaalrelatie_email" class="block text-sm font-medium text-dark mb-1">
              E-mailadres <span class="text-red-500">*</span>
            </label>
            <input
              type="email"
              id="betaalrelatie_email"
              name="betaalrelatie_email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="iban" class="block text-sm font-medium text-dark mb-1">
              IBAN banknummer <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="iban"
              name="iban"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="betaalrelatie_plaats_iban" class="block text-sm font-medium text-dark mb-1">
              Plaats <span class="text-red-500">*</span>
            </label>
            <input
              type="text"
              id="betaalrelatie_plaats_iban"
              name="betaalrelatie_plaats_iban"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>

          <div>
            <label for="datum" class="block text-sm font-medium text-dark mb-1">
              Datum <span class="text-red-500">*</span>
            </label>
            <input
              type="date"
              id="datum"
              name="datum"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
            />
          </div>
        </div>

        <!-- Handtekening -->
        <div>
          <label for="handtekening" class="block text-sm font-medium text-dark mb-1">
            Handtekening lid/betaalrelatie <span class="text-red-500">*</span>
          </label>
          <p class="text-xs text-dark/60 mb-2">
            U dient hier uw volledige voor- en achternaam in te vullen als handtekening
          </p>
          <input
            type="text"
            id="handtekening"
            name="handtekening"
            required
            placeholder="Voor- en achternaam"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-white text-dark focus:ring-2 focus:ring-accent focus:border-transparent"
          />
        </div>

        <!-- Submit button -->
        <div class="flex gap-4 pt-4">
          <button
            type="button"
            onclick="window.closeOpzeggingModal?.()"
            class="px-6 py-2 border border-gray-300 rounded-lg text-dark hover:bg-gray-100 transition-colors"
          >
            Annuleren
          </button>
          <button
            type="submit"
            class="flex-1 px-6 py-2 bg-accent text-white rounded-lg hover:bg-accent-dark transition-colors font-medium"
          >
            Verzenden
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('opzegging-modal');
  const backdrop = document.getElementById('opzegging-modal-backdrop');
  const closeButton = document.getElementById('opzegging-modal-close');
  const form = document.getElementById('opzegging-form');

  function openModal() {
    if (modal) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeModal() {
    if (modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = '';
      form?.reset();
    }
  }

  // Close on backdrop click
  backdrop?.addEventListener('click', closeModal);

  // Close on close button click
  closeButton?.addEventListener('click', closeModal);

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
      closeModal();
    }
  });

  // Email confirmation validation
  const emailInput = document.getElementById('email');
  const emailConfirmInput = document.getElementById('email_confirm');
  
  function validateEmailMatch() {
    if (emailInput.value !== emailConfirmInput.value) {
      emailConfirmInput.setCustomValidity('E-mailadressen komen niet overeen');
    } else {
      emailConfirmInput.setCustomValidity('');
    }
  }

  emailInput?.addEventListener('input', validateEmailMatch);
  emailConfirmInput?.addEventListener('input', validateEmailMatch);

  // Form submission
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalButtonText = submitButton?.textContent || 'Verzenden';
    
    // Disable button en toon loading state
    if (submitButton) {
      submitButton.disabled = true;
      submitButton.textContent = 'Verzenden...';
    }
    
    try {
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());
      
      // Verstuur naar Freescout API
      const response = await fetch('/api/freescout-submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          formType: 'opzegging',
          formData: data,
        }),
      });
      
      const result = await response.json();
      
      if (result.success) {
        alert('Bedankt voor je bericht! We nemen zo snel mogelijk contact met je op.');
        closeModal();
      } else {
        throw new Error(result.error || 'Er is een fout opgetreden bij het verzenden van het formulier.');
      }
    } catch (error: any) {
      console.error('Fout bij verzenden formulier:', error);
      alert('Er is een fout opgetreden bij het verzenden van het formulier. Probeer het later opnieuw of neem contact met ons op via secretariaat@hgvhengelo.nl');
    } finally {
      // Herstel button state
      if (submitButton) {
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
      }
    }
  });

  // Expose openModal globally
  window.openOpzeggingModal = openModal;
  window.closeOpzeggingModal = closeModal;
</script>

<style>
  @keyframes scale-in {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .animate-scale-in {
    animation: scale-in 0.2s ease-out;
  }
</style>
